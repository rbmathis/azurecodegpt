{
    "name": "azurecodegpt-auth",
    "displayName": "azurecodegpt-auth: write and improve code using AI",
    "description": "Use GPT3 or ChatGPT right inside the IDE to enhance and automate your coding with AI-powered assistance",
    "version": "2.0.0",
    "publisher": "JeremySemel",
    "icon": "resources/extensionIcon.png",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/ThePush/azurecodegpt-auth"
    },
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other",
        "Programming Languages",
        "Snippets",
        "Azure"
    ],
    "keywords": [
        "chatgpt",
        "openai",
        "gpt3",
        "copilot",
        "ai",
        "explain",
        "find bugs",
        "explain ",
        "refactor",
        "azure"
    ],
    "main": "./dist/extension.js",
    "activationEvents": ["onStartupFinished"],
    "contributes": {
        "commands": [
            {
                "command": "azurecodegpt-auth.ask",
                "title": "Ask azurecodegpt-auth"
            },
            {
                "command": "azurecodegpt-auth.explain",
                "title": "azurecodegpt-auth: Explain selection"
            },
            {
                "command": "azurecodegpt-auth.refactor",
                "title": "azurecodegpt-auth: Refactor selection"
            },
            {
                "command": "azurecodegpt-auth.findProblems",
                "title": "azurecodegpt-auth: Find problems"
            },
            {
                "command": "azurecodegpt-auth.optimize",
                "title": "azurecodegpt-auth: Optimize selection"
            },
            {
                "command": "azurecodegpt-auth.documentation",
                "title": "azurecodegpt-auth: Write documentation"
            },
            {
                "command": "azurecodegpt-auth.resetSession",
                "title": "Reset Azure OpenAI API session"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "azurecodegpt-auth.ask",
                    "when": "editorTextFocus",
                    "group": "azurecodegpt-auth-menu-group@1"
                },
                {
                    "command": "azurecodegpt-auth.explain",
                    "when": "editorHasSelection",
                    "group": "azurecodegpt-auth-menu-group@2"
                },
                {
                    "command": "azurecodegpt-auth.refactor",
                    "when": "editorHasSelection",
                    "group": "azurecodegpt-auth-menu-group@3"
                },
                {
                    "command": "azurecodegpt-auth.findProblems",
                    "when": "editorHasSelection",
                    "group": "azurecodegpt-auth-menu-group@4"
                },
                {
                    "command": "azurecodegpt-auth.optimize",
                    "when": "editorHasSelection",
                    "group": "azurecodegpt-auth-menu-group@5"
                },
                {
                    "command": "azurecodegpt-auth.documentation",
                    "when": "editorHasSelection",
                    "group": "azurecodegpt-auth-menu-group@6"
                }
            ],
            "commandPalette": [
                {
                    "command": "azurecodegpt-auth.ask"
                },
                {
                    "command": "azurecodegpt-auth.explain",
                    "when": "editorHasSelection"
                },
                {
                    "command": "azurecodegpt-auth.refactor",
                    "when": "editorHasSelection"
                },
                {
                    "command": "azurecodegpt-auth.findProblems",
                    "when": "editorHasSelection"
                },
                {
                    "command": "azurecodegpt-auth.optimize",
                    "when": "editorHasSelection"
                },
                {
                    "command": "azurecodegpt-auth.documentation",
                    "when": "editorHasSelection"
                },
                {
                    "command": "azurecodegpt-auth.resetSession"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "azurecodegpt-auth",
                    "title": "azurecodegpt-auth",
                    "icon": "resources/icon.png"
                }
            ]
        },
        "views": {
            "azurecodegpt-auth": [
                {
                    "type": "webview",
                    "id": "azurecodegpt-auth.chatView",
                    "name": "azurecodegpt-auth"
                }
            ]
        },
        "configuration": {
            "title": "azurecodegpt-auth",
            "type": "object",
            "properties": {
                "azurecodegpt-auth.graphUri": {
                    "type": "string",
                    "default": "",
                    "description": "Azure graph endpoint URI that will be used to determine the permissions of the user. Ex: 'https://graph.microsoft.com/.default'",
                    "order": 0
                },
                "azurecodegpt-auth.keyvaultUri": {
                    "type": "string",
                    "default": "",
                    "description": "URI for Azure KeyVault that will be used to fetch AOAI settings. Ex: 'https://<yourvaultname>.vault.azure.net/'",
                    "order": 1
                },
                "azurecodegpt-auth.maxTokens": {
                    "type": "number",
                    "default": 1024,
                    "description": "Maximum number of tokens inside response per request",
                    "order": 2
                },
                "azurecodegpt-auth.temperature": {
                    "type": "number",
                    "default": 0.5,
                    "description": "Temperature to use for the GPT3 (between 0 (conservative) and 1 (creative))",
                    "order": 3
                },
                "azurecodegpt-auth.pasteOnClick": {
                    "type": "boolean",
                    "default": true,
                    "description": "Paste the code from a codeblock inside the response into the editor when you click on it",
                    "order": 4
                },
                "azurecodegpt-auth.promptPrefix.explain": {
                    "type": "string",
                    "default": "Explain what this code does: ",
                    "description": "The prompt prefix used for explaining the selected code",
                    "order": 5
                },
                "azurecodegpt-auth.promptPrefix.refactor": {
                    "type": "string",
                    "default": "Refactor this code and then explain what's changed: ",
                    "description": "The prompt prefix used for refactoring the selected code",
                    "order": 6
                },
                "azurecodegpt-auth.promptPrefix.findProblems": {
                    "type": "string",
                    "default": "Find problems with the following code, fix them and explain what was wrong (Do not change anything else, if there are no problems say so): ",
                    "description": "The prompt prefix used for finding problems in the selected code",
                    "order": 7
                },
                "azurecodegpt-auth.promptPrefix.optimize": {
                    "type": "string",
                    "default": "Optimize the following code if there is anything to improve, if not say so: ",
                    "description": "The prompt prefix used for optimizing the selected code",
                    "order": 8
                },
                "azurecodegpt-auth.promptPrefix.documentation": {
                    "type": "string",
                    "default": "Write documentation for the following code: ",
                    "description": "The prompt prefix used for writing documentation for the selected code",
                    "order": 9
                },
                "azurecodegpt-auth.selectedInsideCodeblock": {
                    "type": "boolean",
                    "default": true,
                    "description": "Append selected code as a codeblock (```...code...```) instead of plain text",
                    "order": 10
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "update-package-lock": "npm install --package-lock-only"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "ts-loader": "^9.4.1",
        "typescript": "^4.9.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0"
    },
    "dependencies": {
        "@azure/identity": "^4.4.1",
        "@azure/keyvault-secrets": "^4.8.0",
        "@azure/openai": "^1.0.0-beta.10",
        "openai": "^3.1.0"
    }
}
